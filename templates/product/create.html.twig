{%extends "base.html.twig" %}


{% block title %}
	création d' un produit
{% endblock %}
{% block body %}
	<h1>Nouveau produit</h1>
	{{form_start(formView)}}
	{{form_errors(formView)}}
	<div class="class row">
	<div class="col">
	{{form_row(formView.name)}}
	{{form_row(formView.price)}}
	</div>
	<div class="col">
	{{form_row(formView.shortDescreption)}}
	{{form_row(formView.category)}}
	</div>
	</div>
	
	
	<button type="submit" class="btn btn-primary">
	<i class="fa fas-save"></i>
	créer le produit

	</button>
	{{form_end(formView)}}

{% endblock %}
