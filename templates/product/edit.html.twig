{%extends "base.html.twig" %}


{% block title %}
	Edition de
	{{product.nom}}
{% endblock %}

{% block body %}
	<h1>Editer le produit{{product.nom}}</h1>
	<h1>Nouveau produit</h1>
	{{form_start(formView)}}
	{{form_errors(formView)}}
	<div class="class row">
		<div class="col">
			{{form_row(formView.nom)}}
			{{form_row(formView.price)}}
		</div>
		<div class="col">
			{{form_row(formView.mainPicture)}}
			{{form_row(formView.category)}}
			{{form_row(formView.shortDescription)}}
		</div>
	</div>


	<button type="submit" class="btn btn-primary">
		<i class="fa fas-save"></i>
		Editerle produit

	</button>
	{{form_end(formView)}}

{% endblock %}
